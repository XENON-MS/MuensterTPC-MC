# for tracking information set 'verbose 2'
/control/verbose 0
/run/verbose 0
/event/verbose 0
/tracking/verbose 0

/Xe/detector/setLXeMeshMaterial GridMeshSS316LSteelGXe
/Xe/detector/setGXeMeshMaterial GridMeshSS316LSteelGXe

# change the material of the LXe phase to another defined material
# dont forget to remember that this changes the volume name
/Xe/detector/setMat LXe

# switch on scintillation inside the TPC
/Xe/detector/setLXeScintillation false
# default teflon reflectivity is 0.95 - see detector construction
/Xe/detector/setTeflonReflectivity 0.95
# Set absorption length
#/Xe/detector/setLXeAbsorbtionLength 20 cm

# set properties of the volume source
#/Xe/gun/type Volume
#/Xe/gun/shape Cylinder
#/Xe/gun/halfz 84.5 mm
#/Xe/gun/radius 40 mm
#/Xe/gun/center 0 0 -84.5 mm
#/Xe/gun/confine LXe

# set properties of the point source
/Xe/gun/type Point
/Xe/gun/center 0 -160 -84.5 mm
/Xe/gun/angtype iso

/Xe/gun/energy 0 keV
/Xe/gun/particle ion

# for 137Cs
/Xe/gun/ion 55 137 0 0
# for 60Co
#/Xe/gun/ion 27 60 0 0
# for 57Co
#/Xe/gun/ion 27 57 0 0
# for 83mKr / Kr-83m
#/Xe/gun/ion 36 83 0 41.5437

# start simulation
#/run/beamOn 100
